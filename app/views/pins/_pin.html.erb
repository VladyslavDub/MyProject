<div class="col-6">
  <div class="">
    <%=link_to image_tag(pin.image.variant(resize_to_limit: [300, 300])),pin_path(pin) if pin.image.attached? %>
  </div>
  <div class="">
    <%= link_to pin.title, pin_path(pin)%>
  </div>
  <span class="badge bg-secondary" title="Created"><%=pin.created_at%></span>
  <span class="badge bg-primary" title="Author"><%=pin.user.username%></span>
  <span class="badge bg-danger" title="Likes">
    <span class="like-counter">
      <%=pin.likes.size if pin.likes.size > 0%>
    </span>
    <a class="like" data-object-id="<%=pin.id%>">Like</a></span>
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
  </svg>
  <%=pin.impressionist_count %>
  <div class="">
    <%pin.categories.each do |category|%>
      <span class="badge">
        <%=link_to category.name, category_path(category)%>
      </span>
    <%end%>
  </div>
</div>
