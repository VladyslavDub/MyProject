<p id="notice"><%= notice %></p>

<h1>Pins</h1>

<%= link_to 'New Pin', new_pin_path, class:"btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td><%= pin.caption %></td>
        <td><%= link_to 'Show', pin, class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin), class:"btn btn-warning"%></td>
        <td><%= link_to 'Destroy', pin, class:"btn btn-danger",method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


